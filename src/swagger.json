{
    "openapi": "3.0.0",
    "info": {
        "title": "Ecommerce API",
        "description": "Una API para que puedas adimistrar un ecommerce con funcionalidades basicas para hacer pruebas en caulquier Frontend",
        "version": "1.0.0"
    },
    "paths":{
        "/api/v1/users":{
            "post": {
                "tags": ["users"],
                "description": "Este endpoint es para crear un usuario",
                "summary": "Crea un nuevo usuario en el ecommerce",
                "requestBody": {
                    "description": "Los campos para crear un nuevo usuario en el ecommerce",
                    "required": true,
                    "content": {
                        "aplication/json":{
                            "schema": {"$ref": "#/components/schemas/login"}
                        }
                    }
    
                },
                "responses": {
                    "201": {
                      "description": "created"
                    },
                    "409": {
                      "description": "conflict",
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string",
                                "example": "validation error"
                              },
                              "message": {
                                "type": "string",
                                "example": "Database connection error"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
            }
        },
        "/api/v1/users/login":{
          "post": {
              "tags": ["users"],
              "description": "Este endpoint para el login",
              "summary": "Conexi칩n al login",
              "requestBody": {
                  "description": "Los campos correspondientes del login",
                  "required": true,
                  "content": {
                      "aplication/json":{
                          "schema": {"$ref": "#/components/schemas/login2"}
                      }
                  }
  
              },
              "responses": {
                  "201": {
                    "description": "created"
                  },
                  "400": {
                    "description": "conflict",
                    "content": {
                      "application/json": {
                        "schema": {
                          "type": "object",
                          "properties": {
                            "message": {
                              "type": "string",
                              "example": "Invalid email"
                            },
                            "errorName": {
                              "type": "string",
                              "example": "User not found"
                            }
                          }
                        }
                      }
                    }
                  }
                }
          }
      },
        "/api/v1/users/{id}": {
            "put": {
              "tags": ["users"],
              "summary": "Actualiza el nombre y apellido de un usuario",
              "description": "para actualizar el nombre y apellido de un usuario necesitas mandar en el body, name y el lastname y como path param el id de usuario que se va a actulizar",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "description": "El id del usuario que se va a actualizar"
                }
              ],
              "requestBody": {
                "description": "shalalala shalalala",
                "content": {
                  "application/json": {
                    "schema": { "$ref": "#/components/schemas/updateUser" }
                  }
                }
              },
              "responses": {
                "204": {
                  "description": "No Content"
                }
              }
            }
          },
          
          "/api/v1/products": {
            "get": {
              "summary": "obtiene todas los articulos hechas por el usuario",
              "tags": ["products"],
              "responses": {
                "201": {
                  "description": "Ok",
                  
                  "content": {
                    "application/json": {
                      "schema": { "$ref": "#/components/schemas/products" }
                    }
                  }
                  
                },
                "409": {
                  "description": "conflict",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "example": "validation error"
                          },
                          "message": {
                            "type": "string",
                            "example": "Database connection error"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
          
        },
        "components": {
          "schemas": {
            "login": {
              "description": "la contrase침a debe tener al menos 7 caracteres",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "isaiashdez@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "1234567"
                }
              }
            },
            "login2": {
              "description": "la contrase침a debe tener al menos 7 caracteres",
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "isaiashdez@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "1234567"
                }
              }
            },
            "updateUser": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "Ian"
                },
                "avatar": {
                  "type": "string",
                  "example": "www.example.com"
                },
                "email": {
                  "type": "string",
                  "example": "ejemplo@hotmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "1234567"
                }
              }
            },
            "products": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 6
                  },
                  "name": {
                    "type": "string",
                    "example": "esto es un producto"
                  },
                      "description": {
                        "type": "string",
                        "example": "esto es una descripci칩n del producto"
                      },
                      "price": {
                        "type": "integer",
                        "example": 6
                      },
                      "avaliableQty": {
                        "type": "integer",
                        "example": "is boolean"
                      },
                      "status": {
                        "type": "integer",
                        "example": "is boolean"
                      },
                      "userId": {
                        "type": "integer",
                        "example": 1
                      },
                      "productImage": {
                        "type": "string",
                        "example": "https://www.idelcosa.com/img/default2.png"
                      }
          }
        }
      }
    }
  }
}
        
            
    

            